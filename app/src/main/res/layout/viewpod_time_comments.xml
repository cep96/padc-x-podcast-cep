<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_xlarge"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivTime"
        android:layout_width="@dimen/margin_large"
        android:layout_height="@dimen/margin_large"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:src="@drawable/ic_baseline_access_time_24" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ivTime"
        android:paddingStart="@dimen/margin_small"
        android:text="12m"
        android:textColor="@color/primary_text" />

    <ImageView
        android:id="@+id/ivHot"
        android:layout_width="@dimen/margin_large"
        android:layout_height="@dimen/margin_large"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/tvTime"
        android:src="@drawable/ic_baseline_whatshot_24"
        app:tint="@color/accent" />

    <TextView
        android:id="@+id/tvHotCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ivHot"
        android:paddingStart="@dimen/margin_small"
        android:text="88"
        android:textColor="@color/primary_text" />

    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="@dimen/margin_large"
        android:layout_height="@dimen/margin_large"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/tvHotCount"
        android:src="@drawable/icons8_chat_bubble_24"
        app:tint="@color/progressbar" />

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ivComment"
        android:paddingStart="@dimen/margin_small"
        android:text="10"
        android:textColor="@color/primary_text" />

    <ImageView
        android:id="@+id/ivFlickr"
        android:layout_width="@dimen/margin_medium_2"
        android:layout_height="@dimen/margin_medium_2"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_medium_2"
        android:src="@drawable/flickr" />

</RelativeLayout>